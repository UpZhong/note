/* pages/read/read-item.wxss */

.read-item-wraper {
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.read-item-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.read-item-author-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.read-item-author-date text {
  margin-left: 20px;
  vertical-align: middle;
  font-size: 26rpx;
  margin-bottom: 10px;
}

.read-item-content image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
  display: block;
}

.read-item-content text:first-child {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.read-item-content text:last-child {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.read-item-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.read-item-like image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.read-item-like text {
  vertical-align: middle;
  margin-right: 20px;
}
