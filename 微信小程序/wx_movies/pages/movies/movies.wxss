/* pages/movies/movies.wxss */
@import "./movies-grid/movies-grid-template.wxss";

.movies-wraper {
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
}

.movies-search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.movies-search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.xx-img {
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.movies-content-wraper {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin: 0 auto 20rpx;
  margin-bottom: 30rpx;
}

.movies-title {
  padding: 30rpx 20rpx 22rpx;
}

.slogan {
  font-size: 24rpx;
}

.movies-more {
  float: right;
}

.movies-more text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
  font-size: 24rpx;
}

.movies-more image {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-content {
  display: flex;
  flex-direction: row;
}
